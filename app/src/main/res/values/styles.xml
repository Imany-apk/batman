<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="Label" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/movie_label</item>
        <item name="android:textSize">@dimen/ts_default_text</item>
    </style>

    <style name="Data" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/movie_subtitle</item>
        <item name="android:textSize">@dimen/ts_default_text</item>
    </style>


</resources>